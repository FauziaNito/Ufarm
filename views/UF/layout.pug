doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet' href='/bootstrap-css/css/bootstrap.css')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css')
        link(rel='stylesheet' href='/css/stylesheet.css')
        title Urban Farmer
    body
        aside.sidebar
            .col-auto.col-md-3.col-xl-2.px-sm-2.px-0
                .d-flex.flex-column.align-items-center.align-items-sm-start.px-3.pt-2.text-white.min-vh-100
                    div
                        img.sidebar-logo(src='../../images/s-wlogo2.png' alt='Ufarm Logo')
                    hr.mb-3.mt-4(width='225px' color='#2F6A3F')
                    .sidebar-list-container
                        ul.nav.flex-column.mb-sm-auto.mb-0.align-items-center.align-items-sm-start.sidebar-list(id='')
                            div.d-flex
                                i.bi.bi-pie-chart-fill
                                li.nav-item.intext.mb-4.active.dashboard-icon
                                    a(href='/UFdashboard') Dashboard
                            li.nav-item.sidebar-header.p-0.intext
                                strong PRODUCE MANAGEMENT
                            hr.m-0(width='225px' color='#2F6A3F')
                            div.d-flex
                                img.mt-4(src="../../images/apple.png" height="18px")
                                li.nav-item.pt-4.intext.dashboard-icon
                                    a(href='/producelist') Upload Produce
                            div.d-flex
                                img(src="../../images/carrots.png" height="18px")
                                li.nav-item.pt-4.intext.dashboard-icon
                                a(href='/approvedlist') Approved Produce
                            div.d-flex
                                img(src="../../images/cancel.png" height="18px")
                                li.nav-item.pt-4.intext.dashboard-icon
                                a(href='') Rejected Produce
                            li.nav-item.sidebar-header.p-0.intext
                                strong SALES MANAGEMENT
                            hr.m-0(width='225px' color='#2F6A3F')
                            div.d-flex
                                img.mt-4(src="../../images/shopping-cart.png" height="18px")
                                li.nav-item.pt-4.intext.dashboard-icon 
                                    a(href='/order') Orders
                            div.d-flex
                                img(src="../../images/remove-cart.png" height="18px")
                                li.nav-item.intext.dashboard-icon Order Returns
                            div.d-flex
                                img(src="../../images/wallet.png" height="18px")
                                li.nav-item.intext.dashboard-icon My Wallet
                            li.nav-item.sidebar-header.p-0.intext
                                strong ACCOUNTS
                            hr.m-0(width='225px' color='#2F6A3F')
                            div.d-flex
                                i.bi.bi-person-circle.pt-4
                                li.nav-item.pt-4.intext.dashboard-icon
                                    a(href='UF-dashboard.html') My account
        block content
