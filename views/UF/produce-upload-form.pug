extends layout 
block content
    main.content
        nav.navbar.navbar-expand-lg.shadow.p-2.mb-3.bg-white.bottom-shadow
            .container-fluid
                a.navbar-brand.text-dark(href='#') Produce Registration
                button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarSupportedContent.collapse.navbar-collapse
                    ul.navbar-nav.me-auto.mb-2.mb-lg-0.ml-auto
                        li.nav-item.dropdown(style='margin-left:auto ;')
                            a.nav-link.dropdown-toggle.text-secondary(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
                                | Urban Farmer
                            ul.dropdown-menu
                                li
                                    a.dropdown-item(href='#') Profile
                                li
                                    a.dropdown-item(href='#')
                                li
                                    a.dropdown-item(href='#') Signout
        .container-fluid.form-style
            .logo-div
                img.user-logo.mb-2(src='../images/logo.png' alt='Ufarm logo')
            form#signup.form(action='#' name='registration' method='post')
                h5.text-muted.text-center Add Your Produce Details Here
                hr
                .row
                    .col
                        .form-field
                            label(for='producecode')
                                | Produce Code:
                                small.asterisk  *
                            input#producecode(type='text' name='producecode' autocomplete='off' placeholder='Enter Produce Code')
                            small#producecodeerr
                    .col
                        .form-field
                            label Procude Name:
                            select#producename(name='producename')
                                option(value='ug') Select Produce
                                option(value="Brocoli") Brocoli
                                option(value="Apples") Apples
                                option(value="Lemons") Lemons
                                option(value="Banana") Banana
                                option(value="Cabbage") Cabbage
                                option(value="GreenPaper") Green Paper
                                option(value="Carrots") Carrots
                                option(value="Garlic") Garlic
                                option(value="Tomatoes") Tomatoes
                                option(value="RedOnions") Red Onions
                                option(value="Ginger") Ginger
                                option(value="RedOnions") Red Onions
                            small#producenameerr
                    .col
                        .form-field
                            label(for='ward') Units of Measurement:
                            select#units(name='units')
                                option(value='selectunits') Select Units
                                option(value='kg') Kgs
                                option(value='gm') gms
                                option(value='ltrs') ltrs
                                option(value='Bunch') Bunch
                                option(value='Sack') Sack
                            small#unitserr
                    .col
                        .form-field
                            label(for='regdate')
                                | Date of Registration:
                                small.asterisk  *
                            input#regdate(type='date' name='regdate' autocomplete='off')
                .row
                    .col
                        .form-field
                            label(for='quantity')
                                | Quantity
                                small.asterisk  *
                            input#quantity(type='number' name='quantity' autocomplete='off' placeholder='Enter Unit Quantity')
                            small#quantityerr
                    .col
                        .form-field
                            label(for='currency')
                                | Currency:
                                small.asterisk  *
                            input#currency(name='currency' autocomplete='off' value='UGX' disabled='')
                    .col 
                        .form-field
                            label(for='price')
                                | Unit Price:
                                small.asterisk  *
                            input#unitprice.ml-2.flex-fill(type='text' name='unitprice' placeholder='Enter Unit Price' autocomplete='off')
                            small#unitpriceerr
                    .col 
                        .form-field
                            label(for='price')
                                | Total Price:
                                small.asterisk  *
                            input#totalprice.ml-2.flex-fill(type='text' name='totalprice' placeholder='Enter Price' autocomplete='off')
                            small#totalpriceerr
                .row
                    .col
                        .form-field
                            label(for='mod') Mode of Delivery:
                            select#modeofdelivery(name='modeofdelivery')
                                option(value='Pick Up') Pick Up
                                option(value='Home Delivery') Home Delivery
                            small#modeofdelivererr
                    .col
                        .form-field
                            label(for='mod') Mode of Payment:
                            select#modeofpayment(name='modeofpayment')
                                option(value='Cash') Cash
                                option(value='Mobile Money') Mobile Money
                            small#modeofpaymenterr
                    .col 
                        .form-field
                            label(for='imageupload')
                                | Upload Produce Image Here:
                                small.asterisk  *
                            input#imageupload.ml-2.form-control(type='file' name='imageupload' autocomplete='off')
                            small#imageuploaderr
                    .col
                        .form-field
                            label(for='producttype') Product Type:
                            .radio
                                input#producttype1(type='radio' name='producttype' autocomplete='off')
                                span Organic
                                input#producttype2(type='radio' name='producttype' autocomplete='off')
                                span NoneOrganic
                            small#producttypeerr
                hr.mt-1
                p.text-muted Farmer's Details and Home Direction
                .row
                    .col
                        .form-field
                            label(for='ward') Farmer's Name:
                            select#farmername(name='farmername') 
                                option(value='Fauzia Naava') Fauzia Naava
                            
                    .col
                        .form-field
                            label(for='ward') Ward:
                            select#ward(name='ward')
                                option(value='selectward') Select ward 
                                option(value='Ward 1') Ward 1
                                option(value='Ward 2') Ward 2
                                option(value='Ward 3') Ward 3
                                option(value='Ward 4') Ward 4
                            small#warderr 
                    .col.column-stretch-left
                        .form-field
                            label(for='streetname')
                                | Street Name:
                                small.asterisk  *
                            input#streetname(type='text' name='streetname' autocomplete='off')
                            small#streetnameerr 
                    .col
                        .form-field
                            label(for='housenumber')
                                | House Number:
                                small.asterisk  *
                            input#housenumber(type='text' name='housenumber' autocomplete='off')
                            small#housenumbererr
                .container.FO-form-btn
                    .coordinate-container
                    .button1
                        button.btn.btn-primary.mt-1.form-add-btn.mr-auto(type='submit')
                            | Add
                            | New
                    .button1
                        button.btn.btn-primary.mt-1.ml-4.form-clear-btn.mr-auto(type='submit' style='width:120px ;')
                            | Clear
        .footer
            small.mt-4.ml-5 &copy; Refactory Cohort 12
            small.mt-4.mr-5 &copy; Designed By Fauzia | fauzianaava@gmail.com | 0704545576
    script(src='bootstrap-js/js/bootstrap.bundle.min.js')
