doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet' href='../bootstrap-css/css/bootstrap.css')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css')
        link(rel='stylesheet' href='../css/stylesheet.css')
        title Urban Farmer
    body
        aside.sidebar
            .col-auto.col-md-3.col-xl-2.px-sm-2.px-0
                .d-flex.flex-column.align-items-center.align-items-sm-start.px-3.pt-2.text-white.min-vh-100
                    div
                        img.sidebar-logo(src='../../images/s-wlogo2.png' alt='Ufarm Logo')
                    hr.mb-3.mt-4(width='225px' color='#2F6A3F')
                    .sidebar-list-container
                        ul.nav.flex-column.mb-sm-auto.mb-0.align-items-center.align-items-sm-start.sidebar-list(id='')
                            li.nav-item.intext.mb-4
                                a(href='/UFdashboard') Dashboard
                            li.nav-item.sidebar-header.p-0.intext
                                strong PRODUCE MANAGEMENT
                            hr.m-0(width='225px' color='#2F6A3F')
                            li.nav-item.pt-4.intext
                                a(href='/producelist') Upload Produce
                            li.nav-item.intext.mb-4
                                a(href='') Rejected Produce
                            li.nav-item.sidebar-header.p-0.intext
                                strong SALES MANAGEMENT
                            hr.m-0(width='225px' color='#2F6A3F')
                            li.nav-item.pt-4.intext Confirmed Orders
                            li.nav-item.intext Order Returns
                            li.nav-item.intext My Shop
                            li.nav-item.sidebar-header.p-0.intext
                                strong ACCOUNTS
                            hr.m-0(width='225px' color='#2F6A3F')
                            li.nav-item.pt-4.intext
                                a(href='UF-dashboard.html') My account
    main.content
        nav.navbar.navbar-expand-lg.shadow.p-2.mb-3.bg-white.bottom-shadow
            .container-fluid
                a.navbar-brand.text-dark(href='#' style= 'margin-right:70%') Upload Your Produce
                button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarSupportedContent.collapse.navbar-collapse
                    ul.navbar-nav.me-auto.mb-2.mb-lg-0.ml-auto
                        li.nav-item.dropdown(style='margin-left: auto')
                            a.nav-link.dropdown-toggle.text-secondary(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false') #{loggedUser.firstname +" "+ loggedUser.lastname}
                            ul.dropdown-menu
                                li
                                    a.dropdown-item(href='#') Profile
                                li
                                    a.dropdown-item(href='#')
                                li
                                    form(method="POST" action='/logout')
                                        button.btn(type= 'submit' width='100px') Signout
        .container-fluid.d-flex.flex-row.flex-wrap.justify-content-between.mt-4
            .ml-4
                h5 Update this produce Produce
        .container-fluid.form-style
            .logo-div
                img.user-logo.mb-2(src='../images/logo.png' alt='Ufarm logo')
            form#signup.form(action='/produce/update?id='+product._id name='registerproduce' method='post')
                h5.text-muted.text-center Add Your Produce Details Here
                .row
                    .col
                        .form-field
                            label(for='producename') Produce Name:
                            select(name='producename')
                                option(value="Brocoli" selected = product.producename === "Brocoli") Brocoli
                                option(value="Apples" selected = product.producename === 'Apples') Apples
                                option(value="Lemons" selected = product.producename === 'Lemons') Lemons
                                option(value="Banana" selected = product.producename === 'Banana') Banana
                                option(value="Lemons" selected = product.producename === 'Lemons') Lemons
                                option(value="Cabbage" selected = product.producename === 'Cabbage') Cabbage
                                option(value="GreenPaper" selected = product.producename === 'GreenPaper') Green Paper
                .row
                    .col
                        .form-field
                            label(for='')
                                | Unit Price:
                                small  *
                            input#price(type='number' name='price' autocomplete='off' value=product.unitprice)
                    .col
                        .form-field
                            label(for='')
                                | Quantity:
                                small  *
                            input#quantity(type='number' name='quantity' autocomplete='off' value=product.quantity)
                    .col
                        .form-field
                            label(for='') Mode of Delivery:
                            select(name='modeofdelivery')
                                option(value="Pick Up" selected = product.modeofdelivery === 'Pick Up') Pick Up
                                option(value="Home Delivery" selected = product.modeofdelivery === 'Home Delivery') Home Delivery
                    .col
                        .form-field
                            label Mode of Payment:
                            select(name='modeofpayment')
                                option(value="Cash" selected = product.modeofpayment === 'cash') Cash
                                option(value="Mobile Money" selected = product.modeofpayment === 'mobilemoney') Mobile Money   
                    .form-field
                        input.btn.register-btn(type='submit' value='Update')