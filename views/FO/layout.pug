doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet' href='/bootstrap-css/css/bootstrap.css')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css')
        link(rel='stylesheet' href='/css/stylesheet.css')
        title FO| Dashboard
    body
        aside.sidebar
            .col-auto.col-md-3.col-xl-2.px-sm-2.px-0
                .d-flex.flex-column.align-items-center.align-items-sm-start.px-3.pt-2.text-white.min-vh-100
                    div
                        img.sidebar-logo(src='../../images/s-wlogo2.png' alt='Ufarm Logo')
                    hr.mb-3.mt-4(width='225px' color='#2F6A3F')
                    .sidebar-list-container
                        ul.nav.flex-column.mb-sm-auto.mb-0.align-items-center.align-items-sm-start.sidebar-list(id='')
                            div.d-flex
                                i.bi.bi-pie-chart-fill
                                li.nav-item.intext.mb-4.active.dashboard-icon
                                    a(href='/FOdashboard') Dashboard
                            li.nav-item.sidebar-header.p-0.intext
                                strong(style="font-size:13px") URBAN FARMER MANAGEMENT
                            hr.m-0(width='225px' color='#2F6A3F')
                            div.d-flex
                                i.bi.bi-people-fill.pt-4
                                li.nav-item.pt-4.intext.active.dashboard-icon
                                    a(href='/UFlist') Farmer Accounts
                            div.d-flex
                                img(src="../../images/carrots.png" height="18px")
                                li.nav-item.intext.active.dashboard-icon
                                    a(href='/approveproduce') Produce
                            div.d-flex
                                img(src="../../images/shopping-cart.png" height="18px")
                                li.nav-item.intext.mb-4.active.dashboard-icon
                                    a(href='/farmerorderlist') Orders
                            li.nav-item.sidebar-header.p-0.intext
                                strong(style="font-size:13px") ACCOUNTS
                            hr.m-0(width='225px' color='#2F6A3F')
                            div.d-flex
                                i.bi.bi-person-circle.pt-4
                                li.nav-item.pt-4.intext.active.dashboard-icon My account
                            div.d-flex
                                i.bi.bi-people
                                li.nav-item.intext.active.dashboard-icon Users
                            li.nav-item.sidebar-header.p-0.intext
                                strong SETTINGS
        block content
