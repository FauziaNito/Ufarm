extends layout 
block content
  main.content
    nav.navbar.navbar-expand-lg.shadow.p-2.mb-3.bg-white.bottom-shadow
      .container-fluid
        a.navbar-brand.text-dark(href='#' style= 'margin-right:60%') Masajja Division Wards
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-lg-0.ml-auto
            li.nav-item.dropdown(style='margin-left: auto')
              a.nav-link.dropdown-toggle.text-secondary(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false') #{loggedUser.firstname +" "+loggedUser.lastname}
              ul.dropdown-menu
                li
                  a.dropdown-item(href='#') Profile
                li
                  a.dropdown-item(href='#')
                li
                  form(method="POST" action='/logout')
                    button.btn(type= 'submit' width='100px') Signout
    .container.ward-container
      .card.mt-5(style='width: 120%')
        .card-body
          h5.card-title Current Wards
          table.table.table-hover
            thead
              tr
                th(scope='col') Ward
                th(scope='col') Appointed FO
                th(scope='col') Farmers
                th(scope='col') Successful Orders
            tbody
              tr
                th(scope='row') 1
                td Mark
                td Otto
                td @mdo
              tr
                th(scope='row') 2
                td Jacob
                td Thornton
                td @fat
              tr
                th(scope='row') 3
                td(colspan='2') Larry the Bird
                td @twitter
      .container-fluid.mt-5
        .card(style='width: 70%; margin: auto')
          form(action='')
            .card-body
              h6.card-subtitle.mb-4.text-muted.text-center(style='font-size: large')
                | Add New Ward
              .mb-3
                label.form-label(for='exampleFormControlInput1') Ward
                input#exampleFormControlInput1.form-control(type='email' placeholder='Ward')
              .mb-3
                label.form-label(for='exampleFormControlInput1') Appoint FarmerOne
                input#exampleFormControlInput1.form-control(type='email' placeholder='Ward')
              .d-flex.container.flex-row-reverse
                .button1
                  button.btn.btn-primary.mt-5.ml-4.form-clear-btn.mr-auto(type='submit' style='width: 120px')
                    | Clear
                .button1
                  button.btn.btn-primary.mt-5.form-add-btn.medium-btn.mr-auto(type='submit')
                    | Add New
    .footer
      small.mt-4.ml-5 &copy; Refactory Cohort 12
