extends layout 
block content
    main.content
        nav.navbar.navbar-expand-lg.shadow.p-2.mb-3.bg-white.bottom-shadow
            .container-fluid
                a.navbar-brand.text-dark(href='#' style= 'margin-right:50%') Update FarmerOne
                button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarSupportedContent.collapse.navbar-collapse
                    ul.navbar-nav.me-auto.mb-2.mb-lg-0.ml-auto
                        li.nav-item.dropdown(style='margin-left: auto')
                            a.nav-link.dropdown-toggle.text-secondary(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
                                | Agricultural Officer
                            ul.dropdown-menu
                                li
                                    a.dropdown-item(href='#') Profile
                                li
                                    a.dropdown-item(href='#')
                                li
                                    a.dropdown-item(href='#') Signout
        .container-fluid.form-style
            .logo-div
                img.user-logo.mb-2(src='/images/logo.png' alt='Ufarm logo')
            form#registerFO.form(action='/farmerone/update?id='+farmerOne._id name='updatefarmerone' method='POST')
                h5.text-muted.text-center Upadate FarmerOne's Details
                hr
                .row
                    .col
                        .form-field
                            label(for='firstname') First Name:
                                small.asterisk  *
                            input#firstname(type='text' name='firstname' autocomplete='off'  value=farmerOne.firstname)
                            //- small#firstnameerr
                    .col
                        .form-field
                            label(for='lastname')
                                | Last Name:
                                small.asterisk  *
                            input#lastname(type='text' name='lastname' autocomplete='off'  value=farmerOne.lastname)
                            //- small#lastnameerr    
                    .col
                        .form-field
                            label(for='uniquenumber')
                                | Unique Number:
                                small.asterisk  *
                            input#uniquenumber.text-muted(type='text' name='uniquenumber' autocomplete='off' placeholder='forexample FOW1-001' value=farmerOne.uniquenumber)
                            //- small#uniquenumbererr
                .row
                    .col
                        .form-field
                            label(for='ninnumber')
                                | NIN Number:
                                small.asterisk  *
                            input#ninnumber(type='text' name='ninnumber' autocomplete='off' value=farmerOne.ninnumber)
                            //- small#ninNumberError 
                    .col
                        .form-field
                            label(for='phonenumber')
                                | Phone Number:
                                small.asterisk  *
                            input#phonenumber(type='text' name='phonenumber' value=farmerOne.phonenumber)
                            //- small#phonenumbererr 
                    .col
                        .form-field
                            label(for='residenttype') Resident Type:
                            select#residenttype(name='residenttype')
                                option(value='selectresident') Select Resident Type
                                option(value='Permanent' selected = farmerOne.residenttype === 'Permanent') Permanent
                                option(value='Temporary' selected = farmerOne.residenttype === 'Temporary') Temporary
                            //- small#residenttypeerr 
                .row
                    .col
                        .form-field
                            label(for='periodofstay')
                                | Period of Stay:
                                small.asterisk  *
                            input#periodofstay(type='number' name='periodofstay' autocomplete='off' value=farmerOne.periodofstay)
                            //- small#periodofstayerr 
                    .col
                        .form-field
                            label(for='birthdate')
                                | Date of Bith
                                small.asterisk  *
                            input#birthdate(type='date' name='birthdate' autocomplete='off' value=farmerOne.birthdate.toDateString())
                            //- small#birthdateerr 
                    .col
                        .form-field
                            label(for='gender') Gender:
                            .radio#gender
                                input#gender1(type='radio' name='gender' autocomplete='off' value= 'Female' selected = farmerOne.gender === 'Female')
                                span Female
                                input#gender2(type='radio' name='gender' autocomplete='off' value= 'Male' selected = farmerOne.gender === 'Male')
                                span Male
                                input#gender3(type='radio' name='gender' autocomplete='off' value= 'Others' selected = farmerOne.gender === 'Others')
                                span Others
                            //- small#genderradioerr 
                hr.mt-1
                p.text-muted Add FarmerOne&apos;s Direction Coordinates
                .row
                    .col
                        .form-field
                            label(for='ward') Ward:
                            select#ward(name='ward')
                                option(value='selectward') Select ward for farmerOne
                                option(value='Ward 1' selected = farmerOne.ward === 'Ward 1') Ward 1
                                option(value='Ward 2' selected = farmerOne.ward === 'Ward 2') Ward 2
                                option(value='Ward 3' selected = farmerOne.ward === 'Ward 3') Ward 3
                                option(value='Ward 4' selected = farmerOne.ward === 'Ward 4') Ward 4
                            //- small#warderr 
                    .col.column-stretch-left
                        .form-field
                            label(for='streetname')
                                | Street Name:
                                small.asterisk  *
                            input#streetname(type='text' name='streetname' autocomplete='off' value=farmerOne.streetname)
                            //- small#streetnameerr 
                    .col
                        .form-field
                            label(for='housenumber')
                                | House Number:
                                small.asterisk  *
                            input#housenumber(type='text' name='housenumber' autocomplete='off' value=farmerOne.housenumber)
                            //- small#housenumbererr     
                .container.FO-form-btn
                    .button1
                        input.btn.btn-primary.mt-1.form-add-btn.mr-auto(type='submit' value='Update')
        .footer
            small.mt-4.ml-5 &copy; Refactory Cohort 12
            small.mt-4.mr-5 &copy; Designed By Fauzia | fauzianaava@gmail.com | 0704545576
    script(src='/bootstrap-js/js/bootstrap.bundle.min.js')
    script(src='js/FO_form_validation.js')