.container-fluid.single-produce
    div.mt-4(style='margin-left:50px')
        .card.mt-5(style='width: 23rem; height: 25rem')
            .card-body
                .item-img.single-img
                    img.produce-list-img(src="/"+singleItem.imageupload, alt="Image" width='270px' height="266")
                //- img(src="images/broc.jpg" alt="")

    div.produce-details
        h3 #{singleItem.producename}
        .review-container.d-flex 
            .product-rating
                i.bi.bi-star-fill.icon-style
                i.bi.bi-star-fill.icon-style
                i.bi.bi-star-fill.icon-style
                i.bi.bi-star-half.icon-style
                i.bi.bi-star.icon-style
            .reviews
                p 4.5 reiews
            .divider
            i.bi.bi-pen.mt-3
            .reviews
                p Write a review
        .produce-price.d-flex 
            h5.text-danger(style="margin-right:30px") shs #{singleItem.unitprice}
            h6(style="margin-top:1px") 1 #{singleItem.units}
        .product-description.mt-4 
            p  #{singleItem.producedescription}
            hr(style="margin-top:30px")
        .detail-container.d-flex 
            if singleItem.availability == "available"
                h6 Availability: 
                h6.text-success(style="margin-left:80px") inStock
            else
                h6 Availability: 
                h6.text-danger(style="margin-left:80px") Out of Stock
        .detail-container.d-flex 
            h6(style="margin-right:30px") Mode of Payment:
            h6 #{singleItem.modeofpayment}
        .detail-container.d-flex 
            h6(style="margin-right:33px") Mode of Delivery:
            h6 #{singleItem.modeofdelivery}
        hr(style="margin-top:25px")
        .order-btn
            a.btn.rounded-pill(href="#order-area") Order Now

    .additional-details.mt-4(style='margin-right:30px;margin-left:15px')
        .card.mt-5(style='width: 15rem; height: 30rem')
            .card-body
                .detailed-card.d-flex 
                    .detail-icon
                        i.bi.bi-star.icon-style
                    .detailed-header
                        h5 Free Fast Delivery
                .detailed-content 
                    p Online Only Exclusions Apply
.container-fluid.checkout-area#order-area
    h3.checkout-header Checkout
    h5.order-text Complete your order Please !!!!
    .container.d-flex.justify-content-around
        div
            h5 Contact the Farmer to book #{singleItem.producename}
            .checkout-style.mt-5.farmer-details(style='width: 30rem')
                h5 Farmer&apos;s Details
                .align-details
                    i.bi.bi-person.farmer-detail-icon
                    .farmer-text #{singleItem.farmername}
                .align-details
                    i.bi.bi-telephone.farmer-detail-icon(style='font-size: 32px')
                    .farmer-text 0#{singleItem.phonenumber}
                .align-details
                    i.bi.bi-envelope.farmer-detail-icon(style='font-size: 32px')
                    .farmer-text #{singleItem.email}
                .align-details
                    i.bi.bi-geo-alt.farmer-detail-icon.mb-5(style='font-size: 32px')
                    .farmer-text Masajja #{singleItem.ward} #{singleItem.streetname} #{singleItem.housenumber}
                //- .user-btn-container
                //-     button.btn.rounded-pill.send-order-btn(type='submit') Send Order
        div(style='margin-right: 60px')
            h6 OR
        div
            h5 Enter Your details For delivery
            .container-fluid.checkout-style
                .form-container
                    .logo-div
                        img.user-logo.mb-4(src='../images/logo.png' alt='Ufarm logo')
                    form#signup.form(action='/order' name='registration' method='post' onsubmit="return OrderForm(event);")
                        h5 Confirm your Order for #{singleItem.producename}
                        hr
                        .row
                            .col
                                .form-field
                                    label(for='customername')
                                        | Customer Name:
                                        small  *
                                    select#customername(name='customername')
                                        if loggedUser
                                            option(value = loggedUser.firstname+ " "+loggedUser.lastname) #{loggedUser.firstname +" "+loggedUser.lastname} 
                            .col
                                .form-field
                                    label(for='phonenumber')
                                        | Phone Number:
                                        small  *
                                    select#phonenumber(name='phonenumber')
                                        if loggedUser
                                            option(value = loggedUser.phonenumber) 0#{loggedUser.phonenumber}
                        .row
                            .col
                                .form-field
                                    label(for='email')
                                        | Email:
                                        small  *
                                    select#email(name='email')
                                        if loggedUser
                                            option(value = loggedUser.email) #{loggedUser.email}
                            .col
                                .form-field
                                    label(for='city')
                                        | City:
                                        small  *
                                    select#city(type='text' name='city')
                                        option(value='Selectcity') Select City
                                        option(value='Kampala') Kampala
                                        option(value='Wakiso') Wakiso
                                    small#cityerr
                        .row
                            .col
                                .form-field
                                    label(for='residentarea')
                                        | Resident Area:
                                        small  *
                                    select#residentarea(type='text' name='residentarea')
                                        option(value='Selectarea') Select Area
                                        option(value='Kampala') Kireka
                                        option(value='Wakiso') Nakawa
                                        option(value='Kampala') Najjera
                                        option(value='Wakiso') Busega
                                        option(value='Kampala') Buziga
                                        option(value='Wakiso') Lukuli
                                        option(value='Kampala') Nateete
                                        option(value='Wakiso') Kibuli
                                    small#residentareaerr
                            .col
                                .form-field
                                    label(for='orderquantity')
                                        | Quantity:
                                        small  *
                                    input#orderquantity(type='number' name='orderquantity' autocomplete='off')
                                    small#orderquantityerr
                        .row
                            .col
                                .form-field
                                    label(for='produceid')
                                    input#produceid(type='hidden' name='produceid' autocomplete='off' value= singleItem._id)
                            .col
                                .form-field
                                    label(for='farmerid')
                                    input#farmerid(type='hidden' name='farmerid' autocomplete='off' value= singleItem.farmerid)
                        .row
                            .col
                                .form-field
                                    label(for='customerid')
                                    input#customerid(type='hidden' name='customerid' autocomplete='off' value= loggedUser._id)
                            .col
                                .form-field
                                    label(for='producename')
                                    input#producename(type='hidden' name='producename' autocomplete='off' value= singleItem.producename)
                        .row
                            .col
                                .form-field
                                    label(for='units')
                                    input#units(type='hidden' name='units' autocomplete='off' value= singleItem.units)
                            .col
                                .form-field
                                    label(for='unitprice')
                                    input#unitprice(type='hidden' name='unitprice' autocomplete='off' value= singleItem.unitprice)
                        .row
                            .col
                                .form-field
                                    label(for='availablequantity')
                                    input#availablequantity(type='hidden' name='availablequantity' autocomplete='off' value= singleItem.quantity)
                            .col
                                .form-field
                                    label(for='orderward')
                                    input#orderward(type='hidden' name='orderward' autocomplete='off' value= singleItem.ward)
                            .col
                                .form-field
                                    label(for='farmername')
                                    input#farmername(type='hidden' name='farmername' autocomplete='off' value= singleItem.farmername)
                                    
                        .user-btn-container
                            button.btn.rounded-pill.checkout-order-btn(type='submit') Checkout
                            p
                                a(href='/login' style='font-size:17px; color: #fe9800') Login
                                |  to submit your order
