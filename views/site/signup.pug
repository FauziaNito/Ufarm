extends header 
block content
    .container-fluid.form-style
        .logo-div
            img.user-logo.mb-2(src='../images/logo.png' alt='Ufarm logo')
        form#signup.form(action='#' name='registration' method='post')
            h5 Register Now!
            hr
            .row
                .col
                    .form-field
                        label(for='firstname')
                            | First Name:
                            small  *
                        input#firstname(type='text' name='firstname' autocomplete='off')
                        small#firstnameerr
                .col
                    .form-field
                        label(for='lastname')
                            | Last Name:
                            small  *
                        input#lastname(type='text' name='lastname' autocomplete='off')
                        small#lastnameerr
                .col
                    .form-field
                        label(for='phonenumber')
                            | Phone Number:
                            small  *
                        input#phonenumber(type='text' name='phonenumber' autocomplete='off')
                        small#phonenumbererr
            .row        
                .col
                    .form-field
                        label(for='uniquenumber')
                            | Unique Number:
                            small  *
                        input#uniquenumber(type='text' name='uniquenumber' autocomplete='off')
                        small#uniquenumbererr
                .col
                    .form-field
                        label(for='role') Register As:
                        select#role(name='role')
                            option(value = "selectrole") Select Role
                            option(value = "agricuturalofficer") Agricutural Officer
                            option(value = "generalpublic") Buyer
                        small#roleerr
                .col
                    .form-field
                        label(for='email')
                            | Email:
                            small  *
                        input#email(type='text' name='email' autocomplete='off')
                        small#emailerr
            .row
                .col
                    .form-field
                        label(for='password')
                            | Password:
                            small  *
                        input#password(type='text' name='password' autocomplete='off')
                        small#passworderr
                .col
                    .form-field
                        label(for='regdate')
                            | Date of Registration:
                            small.asterisk  *
                        input#regdate(type='date' name='regdate')
                .col
                    .form-field
                        label(for='gender') Gender:
                        .radio#gender
                            input#gender1(type='radio' name='gender' autocomplete='off')
                            span Female
                            input#gender2(type='radio' name='gender' autocomplete='off')
                            span Male
                            input#gender3(type='radio' name='gender' autocomplete='off')
                            span Others
                        small#genderradioerr
            .user-btn-container
                button.btn.rounded-pill.user-btn(type='submit') Signup
    script(src='bootstrap-js/js/bootstrap.bundle.js')
